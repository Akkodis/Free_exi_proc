Test{RenameTerminal;};

kind GrammarTerminal;
kind GrammarNonterminal;
kind GrammarAnnotation;
kind GrammarAction;


grammar_under_test{
    Grammar{
            lhs{A;};
                rhs{SD; ED; SE; C;};
            lhs{C;};
                rhs{SD; A; D; ED; SE;};
            lhs{D;};
                rhs{AT; SD; A; D; ED; SE;};
                rhs{SD; A; DT; D; ED; SE;};
        };
};


val g_orig = root.grammar_under_test.Grammar;

print("Original grammar:\n", g_orig,"\n\n");


val g = exi_processor_operation(
    rename_terminal{
        GrammarNonterminal A, B, C, D;
        GrammarTerminal    
            SD, 
            ED, 
            SE, 
            EE, 
            AT, 
            CH, 
            NS, 
            CM, 
            PI, 
            DT, 
            ER, 
            SC;

        from{ED;};
        to{SD;};
        Grammar{
            lhs{A;};
                rhs{SD; ED; SE; C;};
            lhs{C;};
                rhs{SD; A; D; ED; SE;};
            lhs{D;};
                rhs{AT; SD; A; D; ED; SE;};
                rhs{SD; A; DT; D; ED; SE;};
        };
    }
);

print("Transformed grammar:\n", g,"\n\n");

assert_equality{
    g;
        Grammar{
            lhs{A;};
                rhs{SD; SD; SE; C;};
            lhs{C;};
                rhs{SD; A; D; SD; SE;};
            lhs{D;};
                rhs{AT; SD; A; D; SD; SE;};
                rhs{SD; A; DT; D; SD; SE;};
        };
};